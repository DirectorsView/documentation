@startuml

class Account {
- id: Long
- password: String
- email: String
- website: String
}

class Company {
- name: String
- address: String
- projects: List<Project>
- vacancies: List<Vacancy>
- employees: List<Person>
- admins: List<Person>
}

class Project {
- name: String
- date: TimeRange
- employees: List<Person>
- startTime: LocalDate
- endTime: LocalDate
- vacancies: List<Vacancy>
}

class Person {
- firstName: String
- lastName: String
- birthdate: LocalDate
}

class Vacancy {
- id: Long
- title: String
- applicants: Person[]
- deadline: LocalDate
- opened: Boolean
}

class Message {
- id: Long
- source: Account
- destination: Account
- content: String
}

Account <|-- Company
Account <|-- Person
Company "1" -- "*" Project
Company "1" -- "*" Vacancy
Vacancy "*" -- "*"Person
Message "*" -- "2" Account
Project "*" -- "*" Person
Project "1" -- "*" Vacancy
Person "*" -- "1" Company
@enduml
